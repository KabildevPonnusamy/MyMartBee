<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_product_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:elevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/itm_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/upload_bgnd"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/image_desc" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/itm_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/payment"
                    android:textSize="13sp"
                    android:text="Rs. 150"
                    android:padding="7dp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/change_bgnd"
                    android:fontFamily="@font/museosans"
                    android:textColor="@color/white"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/itm_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/payment"
            android:textSize="14sp"
            android:text="HP New Branded Laptop"
            android:padding="4dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:singleLine="true"
            android:fontFamily="@font/museosans"
            android:layout_gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>