<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/snow_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_product_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage"
            android:layout_width="120dp"
            android:layout_height="95dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:elevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/itm_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/upload_bgnd"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/image_desc" />

                <!--<com.google.android.material.textview.MaterialTextView
                    android:id="@+id/itm_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/payment"
                    android:textSize="13sp"
                    android:text=""
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/change_bgnd"
                    android:fontFamily="@font/museosans"
                    android:textColor="@color/white"/>-->

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/itm_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/payment"
            android:textSize="12sp"
            android:text="HP New Branded Laptop"
            android:padding="4dp"
            android:textStyle="normal"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/museosans"
            android:layout_gravity="start"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="RM."
                android:textStyle="normal"
                android:maxLines="1"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/museosans"
                android:textColor="@color/red_btn_bg_color"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/itm_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="15000"
                android:textStyle="normal"
                android:maxLines="1"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/museosans"
                android:textColor="@color/red_btn_bg_color"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>