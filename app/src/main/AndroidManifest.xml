<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mart.mymartbee">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.Manifest.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mart_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/new_temp_logo"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.MyMartBee">

        <uses-library android:name ="org.apache.http.legacy" android:required ="false"/>

        <activity
            android:name="com.mart.mymartbee.view.Splash"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mart.mymartbee.view.MobileLogin"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.StoreCreation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.BusinessCategorySelection"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.AddressSelection"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.AddProduct"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.SubCategorySelection"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.ProductDetails"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.SettingsAct"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.ProductViewAll"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.OrderUpdate"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.ReportDetails"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.Profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.ProductViewsAct"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.CrapImageSample"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.SubCategory_Options"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.PendingOrders"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.mart.mymartbee.view.Map_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_new"
            android:windowSoftInputMode="stateHidden|adjustResize" />



        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"/>

        <service
            android:name=".receiver.MyFirebaseMessagingService" android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
        <meta-data
            android:name="android.support.FILE_PROVIDER_PATHS"
            android:resource="@xml/provider_paths" />
        </provider>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

    </application>

</manifest>